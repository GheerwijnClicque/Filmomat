<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>Filmomat</title>
        <link rel="stylesheet" href="/css/style.css" type="text/css">
        <link rel="stylesheet" href="../bower_components/font-awesome/css/font-awesome.css" type="text/css">

        <script src="../bower_components/jquery/dist/jquery.min.js"></script>
        <script src="../js/script.js"></script>
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><h1>Automatic film processor</h1></li>
                    <li><a href="/">Home</a></li>
                    <!-- <li><a href="/newprocess/1">PROCESSTEST</a></li> -->
                    <li><a href="/newfilm"><i class="fa fa-plus" aria-hidden="true"></i> Add film</a></li>
                </ul>
            </nav>
        </header>

        <div id="content">
            <div id="films">
                <ul>
                    <% films.forEach(function(film) { %>
                        <li class="film"><span><a href="/processes/<%= film.id %>"><%= film.film_name %> <%= film.iso %></a><a href="/newprocess/<%= film.id %>" class="id"><i class="fa fa-plus" aria-hidden="true"></i></a></span></li>
                    <% }); %>
                </ul>

                <!-- <li id="pagination"><a href="#" id="previous">Previous page</a><a href="#" id="next">Next page</a></li> -->
            </div>
        </div>

    </body>
</html>
